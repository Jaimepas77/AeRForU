{
    "manifest_version": 3,
    "name": "Acepta el Reto for u!",
    "description": "Chrome extension to highlight solved problems on aceptaelreto.com",
    "version": "1.0.10",
    "action": {
        "default_popup": "popup/hello.html",
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        },
        "default_title": "AeRForU"
    },
    "background": {
        "service_worker": "scripts/background.js"
    },
    "content_scripts": [
        {
            "js": [
                "data/levels.js",
                "scripts/getters.js",
                "scripts/content.js",
                "scripts/update.js"
            ],
            "matches": [
                "*://aceptaelreto.com/problems/*"
            ]
        },
        {
            "js": [
                "scripts/getters.js",
                "scripts/problem.js"
            ],
            "matches": [
                "*://aceptaelreto.com/problem/statement.php*"
            ]
        },
        {
            "js": [
                "scripts/hyperlink.js"
            ],
            "matches": [
                "*://aceptaelreto.com/24en23/*/clasificacion.php"
            ]
        },
        {
            "js": [
                "scripts/update.js"
            ],
            "matches": [
                "*://aceptaelreto.com/"
            ]
        }
    ],
    "permissions": [
        "storage",
        "cookies",
        "downloads"
    ],
    "host_permissions": [
        "*://aceptaelreto.com/*"
    ]
}
